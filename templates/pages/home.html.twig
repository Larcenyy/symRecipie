{% extends "base.html.twig" %}

{% block title %} symRecipe - Accueil {% endblock %}

{% block body %}
    <div class="container">
        <div class="px-2 py-5 d-flex flex-column gap-3">
            <div class="d-flex flex-column gap-2">
                <small>Projet fini à 75%</small>
                <div class="progress">
                    <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 75%;"></div>
                </div>
            </div>
            <h1 class="display-4">Bienvenu sur symRecipe!</h1>
            <p class="lead">Ici, créer, partager et regarder les recettes de les communautés...</p>
            <hr class="my-0">
            <p>Pour commencer,</p>
            <div class="d-flex flex-row justify-content-around">
                <a class="btn btn-dark btn-lg" href="/connect" role="button">Créer ma première recette</a>
                <a class="btn btn-dark btn-lg" href="/ingredient" role="button">Voir mes ingrédients</a>
                <a class="btn btn-dark btn-lg" href="/ingredient" role="button">Voir la communautés</a>
            </div>
        </div>
        <div class="px-2 py-5">
            <h2 class="mt-4">Recette de la communauté</h2>
            <div class="d-flex w-100 flex-row gap-2 flex-wrap  justify-content-between mt-4">
                {% for recipe in recipe %}
                    <div class="card border-dark mb-3" style="max-width: 20rem;">
                        <div class="card-header d-flex flex-column align-items-center py-4 gap-1">
                            <p>Recette n°{{ recipe.id }}</p>
                            {% if recipe.average %}
                                <span class="badge bg-danger">La moyenne de note est de : {{ recipe.average|number_format(2, ".", ".") }} / 5</span>
                            {% else %}
                                <span class="badge bg-danger">Avis insuffisant pour donner une note</span>
                            {% endif %}</div>
                        <div class="card-body flex-column d-flex justify-content-between">
                            <h4 class="card-title"><strong>{{ recipe.name }}</strong></h4>
                            <small class="card-text">{{ recipe.description }}</small>
                            <a class="btn btn-primary mt-4 w-100" href="{{ path('recipe.show', {id: recipe.id}) }}">Voir la recette</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}