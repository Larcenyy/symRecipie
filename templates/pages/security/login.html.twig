{% extends 'base.html.twig' %}

{% block title %}symRecipi Connexion{% endblock %}

{% block body %}
<div class="container">
    <h1 class="mt-4">Formulaire de connexion</h1>

    {% if error %}
        <div class="alert alert-dismissible alert-danger">
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    <form action="{{ path('security.login') }}" method="post">
        <div class="form-group">
            <label for="username" class="form-label mt-4">Addresse Email</label>
            <input type="email" class="form-control" id="username"  placeholder="exemple@remy.fr" name="_username" value="{{ last_username }}">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
            <label for="password" class="form-label mt-4">Mot de passe</label>
            <input type="password" class="form-control" name="_password" id="password" placeholder="********">
        </div>

        <button type="submit" class="mt-4 btn btn-primary">
            Se connecter
        </button>
    </form>
</div>
{% endblock %}
